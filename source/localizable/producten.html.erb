        </div>
      </li>

      <li class="learningspaces">
        <% locale_link_to "/learningspaces.html", class: "col left" do %>
          <h2><%= image_tag t("learningspaces.logo"), alt: t("learningspaces.name") %></h2>
        <% end %>
        <div class="col right">
          <p><%= t("learningspaces.desc", link: locale_link_to(t("learningspaces.name"), "/learningspaces.html")) %></p>
          <%= locale_link_to t("actions.read_more"), "/learningspaces.html", class: "button green outline" %>
        </div>
      </li>

      <li class="starterkit">
        <% locale_link_to "/elearning-starterkit.html", class: "col left" do %>
          <h2><%= t("elearning_starterkit.name") %></h2>
        <% end %>
        <div class="col right">
          <p><%= t("elearning_starterkit.desc", link: locale_link_to(t("elearning_starterkit.name"), "/elearning-starterkit.html")) %></p>
          <%= locale_link_to t("actions.read_more"), "/elearning-starterkit.html", class: "button red outline" %>
        </div>
      </li>

      <li class="threesixty">
        <% locale_link_to "/360-feedback.html", class: "col left" do %>
