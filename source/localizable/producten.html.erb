---
title:
  nl: Producten
  de: Produkte
  en: Products
---

<section class="gray">
  <div class="row">
    <h1><%= t("products.title") %></h1>
    <h2><%= t("products.subtitle") %></h2>
    <br>

    <ul class="solitions-list">

      <li class="capp">
        <% locale_link_to "/capp.html", class: "col left" do %>
          <h2><%= t("capp.name") %></h2>
        <% end %>
        <div class="col right">
          <p><%= t("capp.desc", link: locale_link_to(t("capp.name"), "/capp.html")) %></p>
          <%= locale_link_to t("actions.read_more"), "/capp.html", class: "button blue outline" %>
