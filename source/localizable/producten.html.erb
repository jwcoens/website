        <% end %>
        <div class="col right">
          <p><%= t("threesixty.desc", link: locale_link_to(t("threesixty.name"), "/360-feedback.html")) %></p>
          <%= locale_link_to t("actions.read_more"), "/360-feedback.html", class: "button orange outline" %>
        </div>
      </li>

    </ul>
  </div>
</section>
